<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<header>
    <ul>
        <li>
            <a href="{{ path('homepage') }}">Home</a>
        </li>
        {% if app.user is not null %}
            <li><a href="{{ path('timeline') }}">Timeline</a></li>
            <li><a href="{{ path('user_timeline', {'username': app.user.username}) }}">Me</a></li>
            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
        {% else %}
            <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
        {% endif %}
    </ul>
    <form action="{{ path('search_user') }}">
        <input type="search" name="search" placeholder="Find users" />
        <button type="submit">Search</button>
    </form>
    <form action="{{ path('search_hash_tag') }}">
        <input type="search" name="search" placeholder="Search hashtags" />
        <button type="submit">Search</button>
    </form>
</header>
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
